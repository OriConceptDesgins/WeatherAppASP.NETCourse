
@model List<CityWeather>

@{
    ViewData["Title"] = "Weather Display";
}
<!DOCTYPE html>
<html>
    <head>
        @{
            await Html.RenderPartialAsync("PartialHead");
        }
    </head>

    <body>
    <div class="container mt-5 p-5 my-5 ">
        <div class="row">
        <div class="d-flex justify-content-center">
        @foreach(CityWeather x in Model)
        {
            <div class="col-md-4 p-3">
                <div class="card text-white bg-secondary mb-3" style="max-width: 30rem;">
                       
                        @await Component.InvokeAsync("Weather", x);
                         
                </div>
            </div>
        }
        </div>
        </div>
    </div>

    </body>
</html>